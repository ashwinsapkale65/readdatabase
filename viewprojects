<script>


// create a card using js dom

function createcard(sname,pname,pdes,sphoto,pimg,ptech,skills,linkdin,github,source,demo,udate)
{
    const card = document.querySelector('.cards');



const li = document.createElement('li');
li.className="cards_item"


const div1  = document.createElement('div');
div1.className="card"

const div2  = document.createElement('div');
div2.className="card_image"

const img  = document.createElement('img');
img.src=pimg


const div3  = document.createElement('div');
div3.className="card_content"

const h1  = document.createElement('h2');
h1.className="card_title"
h1.textContent="Project Title:- "

const span1 = document.createElement('span')
span1.textContent=pname

const hr1  = document.createElement('hr');


const h2  = document.createElement('h2');
h2.className="card_title"
h2.textContent="Student Name:- "

const span2 = document.createElement('span')
span2.textContent=sname

const hr2  = document.createElement('hr');

const h3  = document.createElement('h2');
h3.className="card_title"
h3.textContent="Uploaded On:- "

const span3 = document.createElement('span')
span3.textContent=udate



const button = document.createElement('button')
button.textContent="Get Info"

const main = document.querySelector('.main');
button.onclick = function() {
const div4 = document.getElementById("card1")
div4.style.display="block"

const p1 = document.getElementById('sphoto')
const p2 = document.getElementById('sname')
const p3 = document.getElementById('pname')
const p4 = document.getElementById('pdes')
const p5 = document.getElementById('ptech')
const p6 = document.getElementById('skills')



p2.textContent=sname
p3.textContent=pname
p4.textContent=pdes
p1.src=sphoto

p5.textContent=ptech
p6.textContent=skills

const l1 = document.getElementById('linkdin')
const l2 = document.getElementById('github')
const l3 = document.getElementById('source')
const l4 = document.getElementById('demo')
l1.onclick = function()
{
    window.open(linkdin,"_self")
}
l2.onclick = function()
{
    window.open(github,"_self")
}
l3.onclick = function()
{
    window.open(source,"_self")
}
l4.onclick = function()
{
    window.open(demo,"_self")
}




}





card.appendChild(li)
li.appendChild(div1)
div1.appendChild(div2)
div1.appendChild(div3)
div2.appendChild(img)
div3.appendChild(h1)
h1.appendChild(span1)
div3.appendChild(hr1)
div3.appendChild(h2)
h2.appendChild(span2)
div3.appendChild(hr2)
div3.appendChild(h3)
h3.appendChild(span3)
div3.appendChild(button)

}





  // Send a GET request to the github to retrieve data
  fetch('https://ashwinsapkale65.github.io/readdatabase/projects.json')
  .then(response => response.json()) // Parse the response as JSON
  .then(data => {

    data.forEach(item => {
        
      createcard(item.sname,item.pname,item.pdes,item.sphoto,item.pimg,item.ptech,item.skills,item.linkdin,item.github,item.source,item.demo,item.udate)
    });
  })
  .catch(error => console.error(error));






// profile progress

window.onload = function onLoad() {
  let circle = new ProgressBar.Circle(document.getElementById("progress"), {
    // This means 3% of the container
    strokeWidth: 3,
    trailWidth: 1,
    easing: "easeInOut",
    duration: 2800,
    color: "#edc36f",
    from: { color: "#FFEA82" },
    to: { color: "#00CC00" },
    step: (state, bar) => {
      bar.path.setAttribute("stroke", state.color);
    }
  });

  setTimeout(function() {
    circle.animate(1);
  }, 2800);
};
</script>



